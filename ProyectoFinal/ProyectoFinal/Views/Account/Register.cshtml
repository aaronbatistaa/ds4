@using System.Web.Mvc
@model ProyectoFinal.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Registro";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Email", "Correo Electrónico")
        <div class="col-md-10">
            @Html.TextBox("Email", Model.Email, new { @class = "form-control" })
            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("FirstName", "Nombre")
        <div class="col-md-10">
            @Html.TextBox("FirstName", Model.FirstName, new { @class = "form-control" })
            @Html.ValidationMessage("FirstName", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("LastName", "Apellido")
        <div class="col-md-10">
            @Html.TextBox("LastName", Model.LastName, new { @class = "form-control" })
            @Html.ValidationMessage("LastName", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("PhoneNumber", "Teléfono")
        <div class="col-md-10">
            @Html.TextBox("PhoneNumber", Model.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessage("PhoneNumber", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Password", "Contraseña")
        <div class="col-md-10">
            @Html.Password("Password", null, new { @class = "form-control" })
            @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("ConfirmPassword", "Confirmar Contraseña")
        <div class="col-md-10">
            @Html.Password("ConfirmPassword", null, new { @class = "form-control" })
            @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Role", "Rol")
        <div class="col-md-10">
            @Html.DropDownList("Role", (SelectList)ViewBag.Role, "Seleccione un rol", new { @class = "form-control" })
            @Html.ValidationMessage("Role", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Registrarse" class="btn btn-primary" />
        </div>
    </div>
}
